package homework;

import java.util.ArrayList;
import java.util.HashSet;
import java.util.Scanner;

public class Lotto {

	public static void main(String[] args) {
		Lotto sc = new Lotto();
		Scanner s = new Scanner(System.in);
		buy:while(true)
		{
			System.out.print("==========================\n"
					+ "Lotto 프로그램\n"
					+ "--------------------------\n"
					+ "1. Lotto 구입\n"
					+ "2. 프로그램 종료\n"
					+ "==========================\n"
					+ "메뉴선택 : ");
			int menu = Integer.parseInt(s.nextLine());
			switch(menu)
			{
			case 1 : System.out.println("\nLotto 구입시작\n(1000원에 로또번호 하나입니다.)"
					+ "\n금액입력 : ");
					int money =Integer.parseInt(s.nextLine());
					int qty = money/1000;
					int change = qty%1000;
					if(qty>10){System.out.println("입금금액이 너무많습니다.");break;}
					else if(qty < 1){System.out.println("입금금액이 너무작습니다.");break;}
					sc.lottOnum(qty);
			   		 
			case 2 : break buy;
			}
		}
	}
	
	private void lottOnum(int qty)
	{
		
		
		for(int i=0;i<qty;i++)
		{
			HashSet<Integer> lottonum = new HashSet<Integer>();
			while(lottonum.size()<5)
			{
				lottonum.add((int)(Math.random()*(45-1+1)+1));
				
			}
			System.out.print("로또번호"+(i+1)+" : ");
			for(int rl : lottonum)
			{
				System.out.print(rl+" ");
			}
			System.out.println();
		}

		
		
	}
	

}
